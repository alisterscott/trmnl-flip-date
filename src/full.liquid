{% render 'shared' %}

<div class="fdp">
  <div class="fdp-container">
    <div class="fdp-full" id="fdp-root">
      <div class="fdp-tile fdp-dayofweek"></div>
      <div class="fdp-tile fdp-number"></div>
      <div class="fdp-tile fdp-month"></div>
    </div>
  </div>
</div>

<script>
  function renderFullView() {
    const parts = window.getFlipDateParts();

    document.querySelector('.fdp-dayofweek').textContent = parts.dayOfWeek;
    document.querySelector('.fdp-number').textContent = parts.day;
    document.querySelector('.fdp-month').textContent = parts.month;
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', renderFullView);
  } else {
    renderFullView();
  }
</script>
